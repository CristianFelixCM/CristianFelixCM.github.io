{
  "compilerOptions": {

    "target": "es2016",                                
   
    "module": "es6",                                
    "rootDir": "./ts",                                
                     
    "outDir": "./js",                                   
    "removeComments": true,                           
    
    "noEmitOnError": true,                            
 
    "esModuleInterop": true,                           

    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                      
 
    "skipLibCheck": true                               
  }
}
